@{
    ViewData["Title"] = "Home";
}
<link href="https://fonts.googleapis.com/css?family=Niconne" rel="stylesheet" type="text/css">

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-sm-12 col-12 pb30">
            <h1 id="blue">Welcome To</h1>
            <h2>Ohrid Restaurants</h2>
            <p style="padding-left:10px">
                At Ohrid Restaurants, we provide an overview of restaurants
                within Ohrid and allow you to find a mean based on a certain
                cuisine, a specific dish that you're after or if you're just after a
                meal within price range.
            </p>
            <p style="padding-left:10px"> We've got it all here for you. Just scroll down for further information.</p>
        </div>
        <div class="col-md-6 col-sm-12 col-12 welcome-image pb30">
            <div class="row centre p10">
                <div class="col-md-6 col-sm-6 col-6" style="background-size:90%"><img src="../images/burger.jpeg" alt="Hamburger and Chips" /></div>
                <div class="col-md-6 col-sm-6 col-6" style="background-size:90%"><img src="../images/pasta.jpeg" alt="Chicken pasta" /></div>
            </div>
        </div>
    </div>
</div>

<div class="bgi">
    <div class="bgc">
        <div class="container-fluid bgc">
            <div class="row IndexDisc">
                <div class="col-md-3 col-sm-12 col-12 block">
                    <h1 class="IndexHead">Cuisines</h1>
                    <p>
                        The restaurants in Ohrid spoil the locals
                        with such a vast amount of flavours from around the world.
                    </p>
                    <p>
                        <a class="nav-link" asp-controller="home" asp-action="Cuisines">Click here</a>to find out more
                        about the different cuisines available

                    </p>
                </div>
                <div class="col-md-3 col-sm-12 col-12 block">
                    <h1 class="IndexHead">Dishes</h1>
                    <p>With a great amount of cuisines comes a great amount of dishes!</p>
                    <p>There are so many amazing dishes out there for you to try.</p>
                    <p>
                        <a class="nav-link" asp-controller="home" asp-action="Dishes">Click here</a>to look for a dish.


                    </p>
                </div>
                <div class="col-md-3 col-sm-12 col-12 block">
                    <h1 class="IndexHead">Prices</h1>
                    <p>
                        Whether you're after a super cheap meal or want to treat yourself
                        to something a little more fancy. Ohrid has it all.
                    </p>
                    <p>
                        <a class="nav-link" asp-controller="home" asp-action="Prices">Click here</a> to see
                        what's available in your price range.


                    </p>
                </div>
                <div class="col-md-3 col-sm-12 col-12 block">
                    <h1 class="IndexHead">Locations</h1>
                    <p>
                        There might be the perfect meal waiting just around the corner from
                        you. Check out our locations page to find a restaurant near you!
                    </p>
                    <p>
                        <a class="nav-link" asp-controller="home" asp-action="Locations">Click here</a>to see
                        what's available near you.

                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 col-sm-12 col-xs-12 welcome-image pb30">
            <div class="row centre p10">
                <div class="col-md-6 col-sm-6 col-6" style="background-size:90%"><img src="@Url.Content("~/images/burger.jpeg")" alt="Hamburger and Chips" /></div>
                <div class="col-md-6 col-sm-6 col-6" style="background-size:90%"><img src="@Url.Content("~/images/pasta.jpeg")" alt="Chicken pasta" /></div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 col-12 pb30">
            <h1 id="blue">Reviews</h1>
            <h2>Can't make up your mind?</h2>
            <p style="padding-left:10px">
                People from all around Macedonia have already visited these restaurants and have given us their thoughts
            </p>
            <p style="padding-left:10px">Head over to our <a asp-controller="customer" asp-action="Index">Customer Reviews page</a> to find out more</p>
        </div>
    </div>
</div>

<hr class="blueHr" style=" height: 4px;">
<h1 class="hrText">Featured Restaurants</h1>
<hr class="blueHr">
<div id="restaurantsCar" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#restaurantsCar" data-slide-to="0" class="active"></li>
        <li data-target="#restaurantsCar" data-slide-to="1"></li>
        <li data-target="#restaurantsCar" data-slide-to="2"></li>
        <li data-target="#restaurantsCar" data-slide-to="3"></li>
        <li data-target="#restaurantsCar" data-slide-to="4"></li>
        <li data-target="#restaurantsCar" data-slide-to="5"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img src="@Url.Content("~/images/carousel/kaneo_car.jpg")" alt="Kaneo Letna Bavcha" class="img-responsive" onclick="parent.location='http://kaneorestaurant.com/'" />
            <div class="carousel-caption" role="option">
                <p>Kaneo Letna Bavcha</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/images/carousel/leonardo_car.jpg")" alt="Leonardo" class="img-responsive" onclick="parent.location='https://leonardo.mk/mk/'" />
            <div class="carousel-caption" role="option">
                <p>Leonardo</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/images/carousel/riviera_car.jpg")" alt="Nova Riviera" class="img-responsive" onclick="parent.location='http://www.novariviera.com.mk/restoran/'" />
            <div class="carousel-caption" role="option">
                <p>Nova Riviera</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/images/carousel/svsofija_car.jpg")" alt="Sv.Sofia" class="img-responsive" onclick="parent.location='https://restoransvsofija.mk/en_US/'" />
            <div class="carousel-caption" role="option">
                <p>Sv.Sofia</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/images/carousel/tino_car.jpg")" alt="Tino" class="img-responsive" onclick="parent.location='http://www.hoteltino.com.mk/index.php/restaurant'" />
            <div class="carousel-caption" role="option">
                <p>Tino</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="@Url.Content("~/images/carousel/falafel_car.jpg")" alt="Dr.Falafel" class="img-responsive" onclick="parent.location='https://menus.mk/places/ohrid/dr-falafel/'" />
            <div class="carousel-caption" role="option">
                <p>Dr.Falafel</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#restaurantsCar" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true">
        </span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#restaurantsCar" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true">
        </span><span class="sr-only">Next</span>
    </a>
</div>