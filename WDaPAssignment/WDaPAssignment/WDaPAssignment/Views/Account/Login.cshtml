@model LoginViewModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
 
    ViewData["Title"] = "Login";
}

    
<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Login</div>
                    <div class="card-body">
                        <form method="post" asp-controller="account" asp-action="login">
                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right" asp-for="Email"></label>
                                <div class="col-md-6">
                                    <input type="text" asp-for="Email" id="email_address" class="form-control"  required autofocus>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right" asp-for="Password"></label>
                                <div class="col-md-6">
                                    <input type="password" id="password" asp-for="Password" class="form-control" name="password" required>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="form-group row">
                                <div class="col-md-6 offset-md-4">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" asp-for="RememberMe"> Remember Me
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    LogIn
                                </button>
                               
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>
